#!/bin/bash

#open wiki

#print usage
function print_usage {
cat <<EOF

Usage:
  $(basename ${0}) [<word>] [<options>]

    Options:
        --version, -v     print $(basename ${0}) version
        --help, -h        print this
EOF
}

function print_version {
  echo "$(basename ${0}) version 1.0"
}

#オプション
while getopts hv-: OPT
do
  case $OPT in
    -)
      case "${OPTARG}" in
        help) print_usage; exit 0;;
        version) print_version; exit 0;;
      esac
      ;;
    h) print_usage; exit 0;;
    v) print_version; exit 0;;
  esac
done

#ずらす
shift $(expr $OPTIND - 1)

#もし引数がなければ何もしない
if [ -z $1 ];then
  echo "too few argments" 1>&2
  exit 1
fi

#wikipedia URL
WIKI="https://ja.wikipedia.org/wiki/"

#open for wiki
google-chrome "${WIKI}$1"

exit 0
