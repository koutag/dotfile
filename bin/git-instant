#!/usr/bin/env bash

# are we in a git repository?
git rev-parse --is-inside-work-tree &>/dev/null
if [[ $? != 0 ]]; then
  echo "Error:Not a git repository." 1>&2
  exit 1
fi

#confierm working directory
if [ -z "$(git status --porcelain)" ]; then
  # Working directory clean
  echo "working tree is clean" 1>&2
  exit 1
fi

#instant
git status
git add -A

#preview template message
cat < ~/.gitmessage

read -p "do you want commit? y/n" >/dev/null 2>&1
if [ $? -eq "[Nn]" ]; then
    exit 0
fi

#input commit message
read -n 1 -p "commit message:" MSG
if [ -z "$MSG" ]; then
    git commit -m "instant commit"
else
    git commit -m "${MSG}"
fi

git push origin HEAD
