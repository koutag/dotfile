#!bin/bash

# Help
if [ "$1" = "-h" ] || [ "$1" = "--help" ];then
    echo "usage: dlink [dir(s)" 1>&2
    exit 0
fi

for arg in "${@:-$HOME}"
do
  #remove
  for f in "$arg"/.??* "$arg"/*
  do
      #シンボリックリンクでかつファイルが存在しないなら
      if [ -L "$f" ] && ! [ -e "$f" ]; then
        #remove
        command rm -vi "$f"
      fi
  done
done
