#!/bin/bash
#
#[USAGE]
#dic [PATTERN]

#no argument
if [[ -z $1 ]]; then
    echo "too few argument" 1>&2
    exit 1
fi

#serch for ag
DICTIONARY_PATH="$(find $HOME -name "dotfiles")/etc/ejdic.txt"
ag --no-numbers -C 0 -s -w --nocolor "$@" "${DICTIONARY_PATH}"
#ag --no-numbers -C 0 -s --nocolor --pager 'less -s' "$@" "${DICTIONARY_PATH}"
exit 0
