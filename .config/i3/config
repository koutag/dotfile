#General
focus_follows_mouse  yes
workspace_auto_back_and_forth yes
set $mod Mod4
floating_modifier $mod
font pango:Cica Regular 10

#Gap
gaps inner 20
gaps outer 15
smart_gaps on
smart_borders on

# Color
set $mediumvioletred "#c71585"
set $lightslategray "#1e90ff"
set $cunfo "#cb8b8b"
set $cindi "#145ba7"
set $cindiu "#8a9db1"

#<colorclass>           $<border>        $<background>    $<text>         $<indicator> $<child_border>
client.focused          $mediumvioletred $mediumvioletred $lightslategray $cindi       $mediumvioletred
client.focused_inactive $mediumvioletred $cunfo           $lightslategray $cindiu      $lightslategray
client.unfocused        $mediumvioletred $cunfo           $lightslategray $cindiu      $lightslategray
client.urgent           $mediumvioletred $cunfo           $lightslategray $cindi       $lightslategray

#Keybindings
##Quick Launch
bindsym $mod+Return exec XMODIFIERS= alacritty
bindsym $mod+semicolon exec --no-startup-id rofi -show window -show-icons -icon-theme "Papirus"
bindsym $mod+p exec --no-startup-id rofi -show drun -show-icons -icon-theme "Papirus"

##kill focused window
bindsym $mod+q kill

##change focus
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+h focus left
bindsym $mod+l focus right

##move focused window
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+h move left
bindsym $mod+Shift+l move right

##enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle


# split in horizontal orientation
bindsym Mod4+s split h

# split in vertical orientation
bindsym Mod4+v split v

# Workspace
set $ws1 "1:MAIN"
set $ws2 "2:SUB"
set $ws3 "3:WORK"
set $ws4 "4:MEDIA"
set $ws5 "5:GAME"
set $ws6 "6:SYSTEM"
set $ws9 "9:OPTION"

## Workspace keybinding
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+9 workspace $ws9

## Move to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+9 move container to workspace $ws9

## Specific window
no_focus [window_role="pop-up"]
for_window [window_role="pop-up"] floating enable
for_window [class="^.*"] border pixel 2
for_window [class="^albert$"] floating enable
for_window [workspace=$ws3] layout stacking
for_window [workspace=$ws5] floating enable,resize set 1280 960,move position center
for_window [workspace=$ws6] floating enable,resize set 800 600,move position center
for_window [workspace=$ws9] layout stacking

for_window [class="Viewnior"] floating enable,resize set 1600 900,move position center

## Specific workspaces
# assign [class="Google-chrome"] $ws1
# assign [class="Alacritty"] $ws1
assign [class="Spotify"] $ws4
assign [window_role="^browser-window"] $ws3
assign [class="^.*exe"] $ws5
# assign [class="Thunar"] $ws6
assign [class="pavucontrol"] $ws6

##Misc
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

bar {
	font pango:Cica 14
	position top
	tray_output none

	status_command ~/Projects/bumblebee-status/bumblebee-status \
		-m arch-update title spotify memory pasink date time dunst \
		-p title.max=32 time.format="%H:%M" date.format="%Y/%m/%d(%a)" \
		   spotify.format='{title} - {artist}' spotify.layout='spotify.song'\
		-t dracula-powerline
}


# Startup apps
exec --no-startup-id dunst
exec --no-startup-id fcitx5
exec --no-startup-id "feh --bg-scale $HOME/Pictures/wallpaper/cyberpunk.jpg"
exec --no-startup-id picom --config ~/.picom.conf --experimental-backends --backend glx --xrender-sync-fence
